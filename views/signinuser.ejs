<div class="flex flex-col mt-10 px-10 items-center justify-center">
  <div class="flex flex-col items-center justify-center bg-zinc-800 p-10 py-10 gap-5 rounded-lg">
    <h1 class="font-semibold text-3xl">Sign in</h1>
    <form action="/user/signin" method="post" class="flex flex-col items-center">
      <input class="block w-60 bg-transparent border-[1px] border-zinc-700 px-4 py-2 mb-4 rounded-md" type="text" name="username" placeholder="username" />
      <input class="block w-60 bg-transparent border-[1px] border-zinc-700 px-4 py-2 mb-4 rounded-md" type="password" name="password" placeholder="password" />
      <button class="w-60 bg-blue-500 hover:bg-blue-600 transition-all duration-300 rounded-md py-1 text-[17px] font-semibold">Sign in</button>
    </form>
    <p class="text-sm font-medium text-zinc-400">Don't have an Account? <a class="text-white" href="/user/signup">Sign up</a></p>
  </div>
</div>
