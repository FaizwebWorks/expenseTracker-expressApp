<%- include("partials/header")%> <%- include("partials/nav")%>
<h1 class="font-bold text-3xl ml-4 mt-4">Update expenses</h1>
<form action="/expense/update/<%= updateExpense._id%>" method="post" class="p-5">
  <input class="p-2 rounded-md mr-2 border-2 border-zinc-300" type="text" name="title" placeholder="Title" value="<%= updateExpense.title %>" />
  <input class="p-2 rounded-md mr-2 border-2 border-zinc-300" type="number" name="amount" placeholder="Amount" value="<%= updateExpense.amount %>" />
  <input class="p-2 rounded-md mr-2 border-2 border-zinc-300" type="text" name="category" placeholder="Category" value="<%= updateExpense.category %>" />
  <input class="p-2 rounded-md mr-2 border-2 border-zinc-300" type="text" name="remark" placeholder="Remark" value="<%= updateExpense.remark %>" />
  <input class="p-2 rounded-md mr-2 border-2 border-zinc-300" type="text" name="paymentmode" placeholder="Payment Mode" value="<%= updateExpense.paymentmode %>" />
  <button class="bg-blue-500 text-white px-3 py-2 rounded-md font-bold">Update Expense</button>
</form>
<%- include("partials/footer")%>
