<%- include("partials/header")%> 
<%- include("partials/nav")%>
<!--  -->
<div class="flex flex-col mt-10 px-10 items-center justify-center">
    <div class="flex flex-col items-center justify-center bg-zinc-800 p-10 py-10 gap-5 rounded-lg">
        <h1 class="font-semibold text-3xl">Signup User</h1>
        <form action="/user/signup" method="post" class="flex flex-col items-center">
            <input class="block w-60 bg-transparent border-[1px] border-zinc-700 px-4 py-2 mb-4 rounded-md" type="text" name="username" placeholder="username" />
            <input class="block w-60 bg-transparent border-[1px] border-zinc-700 px-4 py-2 mb-4 rounded-md" type="email" name="email" placeholder="name@example.com" />
            <input class="block w-60 bg-transparent border-[1px] border-zinc-700 px-4 py-2 mb-4 rounded-md" type="password" name="password" placeholder="********" />
            <button class="w-60 bg-blue-500 hover:bg-blue-600 transition-all duration-300 rounded-md py-1 text-[17px] font-semibold">Signup</button>
        </form>
        <p>OR</p>
        <a class="w-full bg-zinc-700 hover:bg-zinc-600 transition-all duration-300 font-semibold cursor-pointer rounded-md py-2 flex items-center justify-center gap-3 text-sm" href="/user/auth/google">
            <img width="23" src="/images/icons/Google.png" alt="google-logo">
            Continue with Google
        </a>
        <p class="text-sm font-medium text-zinc-400">Already have an Account? <a class="text-white" href="/user/signin">Sign In</a></p>
    </div>
</div>
