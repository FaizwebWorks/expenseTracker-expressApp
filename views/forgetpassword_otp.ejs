<div class="flex flex-col mt-10 px-10 items-center justify-center">
  <div
    class="flex flex-col items-center justify-center bg-zinc-800 p-10 py-10 gap-5 rounded-lg"
  >
    <h1 class="font-semibold text-3xl">Forget Password</h1>
    <form
      action="/user/forget-password/<%= id %>"
      method="post"
      class="flex flex-col items-center"
    >
      <input
        class="block w-60 bg-transparent border-[1px] border-zinc-700 px-4 py-2 mb-4 rounded-md"
        type="number"
        name="otp"
        placeholder="O T P"
      />
      <button
        class="w-60 bg-[#1E90FF] hover:bg-[#1C86EE] transition-all duration-300 rounded-md py-1 text-[17px] font-semibold"
      >
        Verify OTP
      </button>
    </form>
  </div>
</div>
