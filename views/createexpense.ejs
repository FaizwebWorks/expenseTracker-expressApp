<%- include("partials/header")%> <%- include("partials/nav")%>
<h1 class="font-bold text-3xl ml-4 mt-4">Create expenses</h1>
<form action="/expense/create" method="post" class="p-5">
  <input class="p-2 rounded-md mr-2 border-2 border-zinc-300" type="text" name="title" placeholder="Title" />
  <input class="p-2 rounded-md mr-2 border-2 border-zinc-300" type="number" name="amount" placeholder="Amount" />
  <input class="p-2 rounded-md mr-2 border-2 border-zinc-300" type="text" name="category" placeholder="Category" />
  <input class="p-2 rounded-md mr-2 border-2 border-zinc-300" type="text" name="remark" placeholder="Remark" />
  <input class="p-2 rounded-md mr-2 border-2 border-zinc-300" type="text" name="paymentmode" placeholder="Payment Mode" />
  <button class="bg-blue-500 text-white px-3 py-2 rounded-md font-bold">Log Expense</button>
</form>
<%- include("partials/footer")%>
